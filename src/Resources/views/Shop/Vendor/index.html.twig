{% extends '@SyliusShop/layout.html.twig' %}

{% block title %}{{ 'Vendors' }} - {{ parent() }}{% endblock %}

{% block content %}
    {% for vendor in vendors %}
        {% if loop.index % 5 == 0 or loop.index == 1 %}
            {% if loop.index != 1 %}
            </div>
            {% endif %}
            <div class="row mb-5">
        {% endif %}
        <div class="col-4 col-lg-3">
            <a class="vendor_name_link"
               href="{{ path('odiseo_sylius_vendor_shop_vendor_show',{'slug': vendor.slug } ) }}">
                {% if vendor.logoName %}
                    <div class="vendor_image"
                         style="background: url('{{ vendor.logoName|imagine_filter('odiseo_sylius_vendor_logo') }}') no-repeat center;background-size:cover">
                        <div class="vendor_name">
                            <h1>{{ vendor.name }}</h1>
                            <h3>{{ vendor.category }}</h3>
                        </div>
                    </div>
                {% endif %}
            </a>
        </div>
    {% endfor %}
    </div>
{% endblock %}
